<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/actualbg"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_theme_dark_secondary"
                android:elevation="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/app_Icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/logo2t" />

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/merienda"
                    android:text="NoteCook"
                    android:textColor="@color/md_theme_dark_background"
                    android:textSize="34sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_background_headings"
                    android:fontFamily="@font/merienda"
                    android:gravity="center"
                    android:requiresFadingEdge="none"
                    android:padding="6.5dp"
                    android:text="Featured recipe"
                    android:textColor="@color/md_theme_dark_background"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_theme_dark_inverseSurface"
                    android:elevation="6dp"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="Discover a new recipe today. Explore NoteCook now!"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/md_theme_dark_background" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/tvRecipeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_background_subheadings"
                    android:fontFamily="@font/merienda"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Recipe name"
                    android:textSize="18sp"
                    android:textColor="@color/md_theme_dark_background"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_background_subheadings"
                    android:fontFamily="@font/merienda"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Ingredients"
                    android:textSize="16sp"
                    android:textColor="@color/md_theme_dark_background"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvRecipeIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_theme_dark_inverseSurface"
                    android:elevation="6dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="@color/md_theme_dark_background" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_background_subheadings"
                    android:fontFamily="@font/merienda"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Instructions"
                    android:textSize="16sp"
                    android:textColor="@color/md_theme_dark_background"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvRecipeInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_theme_dark_inverseSurface"
                    android:elevation="6dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="@color/md_theme_dark_background" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:contentDescription="add recipe"
        android:src="@drawable/add"
        app:backgroundTint="#9FB4B6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/md_theme_dark_secondary"
            android:contentDescription="view recipe"
            android:elevation="6dp"
            android:src="@drawable/view" />

        <ImageButton
            android:id="@+id/btnFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/md_theme_dark_secondary"
            android:contentDescription="view fave"
            android:elevation="6dp"
            android:src="@drawable/favorite" />
    </LinearLayout>

</RelativeLayout>