<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_dark_inverseSurface"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merienda"
        android:gravity="center"
        android:text="Add Recipe"
        android:textColor="@color/md_theme_dark_background"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Add a new recipe here!"
        android:textColor="@color/md_theme_dark_background"
        android:textStyle="italic" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/merienda"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingTop="2.5dp"
            android:paddingBottom="2.5dp"
            android:text="Name:"
            android:textColor="@color/md_theme_light_background"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/etRecipeName"
        android:background="@drawable/custom_background_edit"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:hint="name of the recipe"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/merienda"
            android:paddingLeft="10dp"
            android:paddingTop="2.5dp"
            android:paddingBottom="2.5dp"
            android:text="Ingredients:"
            android:textColor="@color/md_theme_light_background"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/etRecipeIngredients"
        android:background="@drawable/custom_background_edit"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:gravity="start|top"
        android:textSize="14sp"
        android:hint="ingredients needed"
        android:inputType="textMultiLine"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/merienda"
            android:paddingLeft="10dp"
            android:paddingTop="2.5dp"
            android:paddingBottom="2.5dp"
            android:text="Instructions:"
            android:textColor="@color/md_theme_light_background"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/etRecipeInstructions"
        android:background="@drawable/custom_background_edit"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:gravity="start|top"
        android:textSize="14sp"
        android:hint="how to make the recipe"
        android:inputType="textMultiLine"
        android:paddingTop="10dp"
        android:paddingLeft="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#866966"
            android:fontFamily="sans-serif"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnAddRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#668386"
            android:fontFamily="sans-serif"
            android:text="Add" />
    </LinearLayout>
</LinearLayout>